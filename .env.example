# Environment Configuration
NODE_ENV=development

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost

# Service Ports
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
INVENTORY_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# Database Configuration (Aurora PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudretail
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS EventBridge
EVENTBRIDGE_BUS_NAME=cloudretail-event-bus

# AWS SQS
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account/cloudretail-queue

# AWS S3
S3_BUCKET_NAME=cloudretail-assets
S3_REGION=us-east-1

# AWS SES (Email)
SES_FROM_EMAIL=noreply@cloudretail.com
SES_REGION=us-east-1

# AWS SNS (SMS)
SNS_REGION=us-east-1

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_XRAY=false
ENABLE_CLOUDWATCH=false

# Security
BCRYPT_ROUNDS=10
MFA_ISSUER=CloudRetail
MFA_WINDOW=1

# Service Discovery
SERVICE_DISCOVERY_ENABLED=false
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Feature Flags
ENABLE_MFA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false
