{
  "name": "cloudretail-ecommerce",
  "version": "1.0.0",
  "description": "Cloud-native microservices-based e-commerce platform",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:services && npm run install:gateway",
    "install:services": "cd services/user-service && npm install && cd ../product-service && npm install && cd ../inventory-service && npm install && cd ../order-service && npm install && cd ../payment-service && npm install && cd ../notification-service && npm install",
    "install:gateway": "cd api-gateway && npm install",
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:user\" \"npm run dev:product\" \"npm run dev:inventory\" \"npm run dev:order\" \"npm run dev:payment\" \"npm run dev:notification\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:user": "cd services/user-service && npm run dev",
    "dev:product": "cd services/product-service && npm run dev",
    "dev:inventory": "cd services/inventory-service && npm run dev",
    "dev:order": "cd services/order-service && npm run dev",
    "dev:payment": "cd services/payment-service && npm run dev",
    "dev:notification": "cd services/notification-service && npm run dev",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config=jest.config.js --testPathPattern=tests/integration",
    "test:performance": "k6 run tests/performance/load-tests/api-load-test.js",
    "test:security": "jest --config=jest.config.js --testPathPattern=tests/security",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "microservices",
    "e-commerce",
    "cloud-native",
    "aws",
    "kubernetes",
    "event-driven"
  ],
  "author": "CloudRetail Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
